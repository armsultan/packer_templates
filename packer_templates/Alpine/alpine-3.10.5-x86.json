{
    "builders": [
        {
            "boot_command": [
                "root<enter><wait>",
                "ifconfig eth0 up \u0026\u0026 udhcpc -i eth0<enter><wait5>",
                "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/answers<enter><wait>",
                "setup-apkrepos -1<enter><wait>",
                "setup-alpine -f $PWD/answers<enter><wait>",
                "{{user `username`}}<enter><wait>",
                "{{user `username`}}<enter><wait>",
                "y<enter>",
                "<wait10><wait10>",
                "reboot<enter>",
                "<wait10><wait10><wait10>",
                "root<enter><wait5>",
                "{{user `username`}}<enter><wait>",
                "echo PermitRootLogin yes >> /etc/ssh/sshd_config<enter>",
                "/etc/init.d/sshd restart<enter><wait>"
            ],
            "boot_wait": "10s",
            "communicator": "ssh",
            "disk_size": "{{user `disk_size`}}",
            "format": "ova",
            "guest_additions_mode": "disable",
            "guest_os_type": "Linux26_64",
            "headless": false,
            "http_directory": "http",
            "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
            "output_directory": "{{ user `build_directory` }}/packer-{{user `template`}}-virtualbox",
            "iso_urls": "{{user `iso_download_url`}}",
            "shutdown_command": "/sbin/poweroff",
            "ssh_password": "{{user `username`}}",
            "ssh_timeout": "10m",
            "ssh_username": "root",
            "type": "virtualbox-iso",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "{{user `memory`}}"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "{{user `cpus`}}"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--rtcuseutc",
                    "on"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--graphicscontroller",
                    "vmsvga"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--vrde",
                    "off"
                ]
            ],
            "vm_name": "{{user `template`}}"
        },
        {
            "boot_command": [
                "root<enter><wait>",
                "ifconfig eth0 up \u0026\u0026 udhcpc -i eth0<enter><wait5>",
                "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/answers<enter><wait>",
                "setup-apkrepos -1<enter><wait>",
                "setup-alpine -f $PWD/answers<enter><wait>",
                "{{user `username`}}<enter><wait>",
                "{{user `username`}}<enter><wait>",
                "y<enter>",
                "<wait10><wait10>",
                "reboot<enter>",
                "<wait10><wait10><wait10>",
                "root<enter><wait5>",
                "{{user `username`}}<enter><wait>",
                "echo PermitRootLogin yes >> /etc/ssh/sshd_config<enter>",
                "/etc/init.d/sshd restart<enter><wait>"
                ],           
            "boot_wait": "30s",
            "cpus": "{{ user `cpus` }}",
            "disk_adapter_type": "{{ user `vm_disk_adapter_type` }}",
            "disk_size": "{{ user `disk_size` }}",
            "disk_type_id": 0,
            "guest_os_type": "other3xlinux-64",
            "headless": true,
            "http_directory": "http",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_urls": "{{user `iso_download_url`}}",
            "memory": "{{ user `memory` }}",
            "output_directory": "{{ user `build_directory` }}/packer-{{user `template`}}-vmware",
            "shutdown_command": "/sbin/poweroff",
            "ssh_password": "{{ user `username` }}",
            "ssh_username": "root",
            "type": "vmware-iso",
            "vm_name": "{{user `template`}}",
            "vmx_data": {
                "ethernet0.pciSlotNumber": "32"
            },
            "vmx_remove_ethernet_interfaces": false,
            "ssh_timeout": "60m"
        }
    ],
    "description": "Build base Alpine Linux x86_64",
    "provisioners": [
        {
            "environment_vars": [
                "HOME_DIR=/home/{{ user `username` }}",
                "http_proxy={{user `http_proxy`}}",
                "https_proxy={{user `https_proxy`}}",
                "no_proxy={{user `no_proxy`}}"
            ],
            "execute_command": "/bin/sh '{{.Path}}'",
            "expect_disconnect": true,
            "scripts": [
                "{{template_dir}}/../_common/motd.sh",
                "{{template_dir}}/../_common/sshd.sh",
                "{{template_dir}}/scripts/update.sh",
                "{{template_dir}}/../_common/virtualbox.sh",
                "{{template_dir}}/../_common/vmware.sh",
                "{{template_dir}}/../_common/parallels.sh",
                "{{template_dir}}/scripts/sudoers.sh",
                "{{template_dir}}/scripts/{{ user `username` }}.sh",
                "{{template_dir}}/../_common/{{ user `username` }}.sh",
                "{{template_dir}}/scripts/minimize.sh"
            ],
            "type": "shell"
        }
    ],
    "variables": {
        "username": "armand",
        "hostname": "alpine",
        "arch": "64",
        "box_basename": "alpine-3.10.5",
        "build_directory": "../../builds",
        "build_timestamp": "{{isotime \"20060102150405\"}}",
        "cpus": "1",
        "disk_size": "10240",
        "vm_disk_adapter_type": "scsi",
        "git_revision": "__unknown_git_revision__",
        "guest_additions_url": "",
        "headless": "true",
        "http_directory": "{{template_dir}}/../centos/http",
        "http_proxy": "{{env `http_proxy`}}",
        "https_proxy": "{{env `https_proxy`}}",
        "iso_checksum": "dd3e01b9f7e0c00347cb9dd1be44673d20290d2388b316aec590faa1a5cdea9b",
        "iso_checksum_type": "sha256",
        "iso_download_url": "http://dl-cdn.alpinelinux.org/alpine/v3.10/releases/x86_64/alpine-virt-3.10.5-x86_64.iso",
        "memory": "1024",
        "name": "alpine-3.10.5",
        "no_proxy": "{{env `no_proxy`}}",
        "template": "alpine-3.10.5-x86_64",
        "version": "TIMESTAMP"
    }
}